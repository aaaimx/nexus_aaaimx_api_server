# Application Configuration
NODE_ENV=development
PORT=3000
PORT_EXTERNAL=3000
COMPOSE_PROJECT_NAME=nexus_aaaimx
API_VERSION=v1

# URLs and Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
BASE_URL=http://localhost:3000
API_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:3001
COOKIE_DOMAIN=localhost

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_SERVICE=gmail
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security
SECRET_CODE=your-secret-code-here
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# Database Configuration
MYSQL_USER=nexus_user
MYSQL_PASSWORD=nexus_password
MYSQL_ROOT_PASS=nexus_root_password
MYSQL_DB=nexus_aaaimx_db
MYSQL_PORT=3306
MYSQL_PORT_EXTERNAL=3307
DATABASE_URL=mysql://nexus_user:nexus_password@db:3306/nexus_aaaimx_db

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback
